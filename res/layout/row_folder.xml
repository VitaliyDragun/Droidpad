<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <FrameLayout
        android:id="@+id/folder_image_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:background="@drawable/folder_icon_72"
        android:paddingLeft="6dp" >

        <ImageView
            android:id="@+id/keys"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/lock"
            android:layout_marginRight="3dp"
            android:layout_marginTop="3dp"
            />
    </FrameLayout>

    <ImageView
        android:id="@+id/enter_arrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:src="@drawable/folder_arrow"
        android:layout_marginRight="5dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@id/enter_arrow"
        android:layout_toRightOf="@id/folder_image_layout"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/folder_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:layout_weight="10"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="default name"
            android:textColor="#0066cc"
            android:textSize="23sp"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/number_of_notes_inside_folder"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:text="-1"
            android:textColor="#0066cc"
            android:textSize="18sp" />
    </LinearLayout>

</RelativeLayout>
