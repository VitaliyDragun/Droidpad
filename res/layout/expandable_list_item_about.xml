<?xml version="1.0" encoding="UTF-8"?>

    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/layout_root"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:id="@+id/layout_app_icon_and_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/imageview_app_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:src="@drawable/note_low_priority_medium" />

            <TextView
                android:id="@+id/text_app_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="DroidPad "
                android:textColor="#0066cc"
                android:textSize="23sp" 
                android:textStyle="normal"
                />
        </LinearLayout>

        <TextView
            android:id="@+id/text_created_by"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/layout_app_icon_and_name"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:text="created by"
            android:textColor="#002545"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/text_developer_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/text_created_by"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:text="Vitaliy Dragun"
            android:textColor="#002545"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/text_developer_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/text_developer_name"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:text="vitdrugoon@gmail.com "
            android:textColor="#002545"
            android:textSize="15sp"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/text_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/text_developer_address"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="8dp"
            android:text="april 2013"
            android:textColor="#002545" />
    </RelativeLayout>
