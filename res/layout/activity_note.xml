<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:isScrollContainer="true"
    tools:context=".CreateNoteActivity" >

    <RelativeLayout
        android:id="@+id/open_note_title_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#002545"
        android:visibility="gone" >

        <ImageButton
            android:id="@+id/edit_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_margin="5dp"
            android:background="#002545"
            android:src="@drawable/pencil_paper" />

        <ImageButton
            android:id="@+id/open_note_clear_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="#002545"
            android:src="@drawable/cross_small" />

        <TextView
            android:id="@+id/open_note_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginLeft="30dp"
            android:layout_toLeftOf="@id/open_note_clear_button"
            android:layout_toRightOf="@id/edit_button"
            android:clickable="true"
            android:singleLine="true"
            android:text="@string/untitled"
            android:textSize="22sp" />

        <view
            android:id="@+id/open_note_add_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            class="custom_views.CustomEditText"
            android:hint="untitled"
            android:maxLength="20"
            android:singleLine="true"
            android:textSize="20sp"
            android:visibility="invisible" />

        <ImageButton
            android:id="@+id/open_note_title_done_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="#002545"
            android:src="@drawable/check_mark_1"
            android:visibility="invisible" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/create_note_title_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#002545" >

        <ImageButton
            android:id="@+id/clear_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="#002545"
            android:paddingLeft="2dp"
            android:src="@drawable/cross_small" />

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:clickable="true"
            android:text="tap to add title"
            android:textSize="22sp" />

        <ImageButton
            android:id="@+id/title_done_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="#002545"
            android:paddingLeft="2dp"
            android:src="@drawable/check_mark_1"
            android:visibility="invisible" />

        <view
            android:id="@+id/add_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_toRightOf="@id/title_done_button"
            class="custom_views.CustomEditText"
            android:capitalize="sentences"
            android:hint="New title"
            android:maxLength="20"
            android:singleLine="true"
            android:textSize="22sp"
            android:visibility="invisible" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/title_bar2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#002545"
        android:visibility="gone" >

        <ImageButton
            android:id="@+id/edit_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_margin="5dp"
            android:background="#002545"
            android:src="@drawable/pencil_paper" />

        <ImageButton
            android:id="@+id/clear_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="#002545"
            android:src="@drawable/cross_small" />

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginLeft="30dp"
            android:layout_toLeftOf="@id/clear_button"
            android:layout_toRightOf="@id/edit_button"
            android:clickable="true"
            android:singleLine="true"
            android:text="@string/untitled"
            android:textSize="22sp" />

        <EditText
            android:id="@+id/add_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:hint="untitled"
            android:maxLength="20"
            android:singleLine="true"
            android:textSize="20sp"
            android:visibility="invisible" />

        <ImageButton
            android:id="@+id/title_done_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="#002545"
            android:src="@drawable/check_mark_1"
            android:visibility="invisible" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/tool_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#002545"
        android:paddingTop="5dp" >

        <ImageButton
            android:id="@+id/font_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#002545"
            android:src="@drawable/blue_folder_with_aa_inscription" />

        <ImageButton
            android:id="@+id/font_color_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#002545"
            android:src="@drawable/pencil" />

        <ImageButton
            android:id="@+id/plus_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#002545"
            android:src="@drawable/plus_2" />

        <ImageButton
            android:id="@+id/minus_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#002545"
            android:src="@drawable/minus" />

        <ImageButton
            android:id="@+id/background_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#002545"
            android:src="@drawable/color_palette" />

        <ImageButton
            android:id="@+id/lines_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#002545"
            android:src="@drawable/lines" />
    </LinearLayout>

    <view
        android:id="@+id/new_note_edittext"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/tool_bar"
        android:layout_below="@id/create_note_title_bar"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        class="custom_views.CustomEditText"
        android:capitalize="sentences"
        android:fadingEdge="vertical"
        android:gravity="top"
        android:hint="New note"
        android:minLines="1"
        android:scrollbars="vertical"
        android:textSize="20sp" />

</RelativeLayout>