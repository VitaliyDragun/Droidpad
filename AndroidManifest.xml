<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="vitaliy.dragun.droidpad_2nd_edition"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="9"
        android:targetSdkVersion="9" />

    <application
        android:name="vitaliy.dragun.droidpad.MyApplication"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="activities.MainActivity"
            android:label="@string/title_activity_main"
            android:theme="@android:style/Theme.NoTitleBar" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="activities.CreateNoteActivity"
            android:label="@string/title_activity_create_note" >
        </activity>
        <activity
            android:name="activities.ItemsActivity"
            android:label="@string/title_activity_items_list" >
        </activity>
        <activity
            android:name="activities.PreferencesActivity"
            android:label="@string/title_activity_preferences" >
        </activity>
        <activity
            android:name="activities.HelpActivity"
            android:label="@string/title_activity_help" >
        </activity>
        <activity
            android:name="activities.ExitActivity"
            android:label="@string/title_activity_exit" >
        </activity>
        <activity
            android:name="activities.OpenNoteActivity"
            android:label="View Note Activity"
            android:theme="@android:style/Theme.NoTitleBar"  >
        </activity>
    </application>

</manifest>
